<div class="link-section">
    <div class="container link-section__inner">
        <div class="link-section__card big-text {% if section.settings.color == 'blue' %}link-section__card--blue{% endif %}">
            {% if section.settings.text1 %}
                <p class="link-section__text">{{ section.settings.text1 }}</p>
            {% endif %}
            {% if section.settings.text2 %}
                <p class="link-section__text">{{ section.settings.text2 }}</p>
            {% endif %}
            {% if section.settings.btn_text %}
                <a href="{{ section.settings.link_url }}">{{ section.settings.btn_text }} <span class="line-arrow">&minus;></span></a>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Link section FAQ",
    "settings": [
        {
            "type": "text",
            "id": "text1",
            "label": "Title",
            "default":"Have a question?"
        },{
            "type": "text",
            "id": "text2",
            "label": "Subitle",
            "default":"Search our FAQ for answers to anything you might be wondering."
        },{
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default":"Go to FAQ"
        },{
            "type":"url",
            "id":"link_url",
            "label":"Link URL"
        },{
            "type":"select",
            "id":"color",
            "label":"label",
            "options": [
                {
                    "value": "blue",
                    "label": "Blue"
                },
                {
                    "value": "pink",
                    "label": "Pink"
                }
            ],
            "default":   "pink"
        }
    ],
    "presets":[
        {
            "name": "Link Section",
            "category": "Custom sections"
        }
    ]
}
{% endschema %}