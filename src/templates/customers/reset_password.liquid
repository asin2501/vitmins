<div class="account">
    <div class="form-reset-password">
        {% form 'reset_customer_password' %}

        <h2 class="account-info-title">{{ 'customer.reset_password.title' | t }}</h2>

        <p class="account-info-text">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        <div class="form-row">
            <label for="ResetPassword" class="label-hidden label">
                {{ 'customer.reset_password.password' | t }}
            </label>
            <input type="password"
                   name="customer[password]"
                   id="ResetPassword"
                   class="{% if form.errors contains 'password' %}input-error{% endif %} input"
                   placeholder="{{ 'customer.reset_password.password' | t }}">
        </div>

        <div class="form-row">
            <label for="PasswordConfirmation" class="label-hidden label">
                {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <input type="password"
                   name="customer[password_confirmation]"
                   id="PasswordConfirmation"
                   class="{% if form.errors contains 'password_confirmation' %}input-error{% endif %} input"
                   placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        </div>

        <div class="button-row">
            <input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
        </div>

        {% endform %}
    </div>
</div>
